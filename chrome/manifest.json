{
  "manifest_version": 3,
  "name": "Markdown Link Copier",
  "version": "1.1",
  "description": "現在のタブのタイトルとURLをマークダウン形式でコピーします",
  "permissions": ["activeTab", "scripting", "contextMenus", "commands", "clipboardWrite"],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Markdownリンクをコピー"
  },
  "commands": {
    "copy_markdown_link": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Markdownリンクをコピー"
    }
  }
}
