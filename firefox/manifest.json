{
	"manifest_version": 3,
	"name": "Markdown Link Copier",
	"version": "1.0",
	"description": "現在のタブのタイトルとURLをMarkdownリンク形式でコピーします。",
	"permissions": ["activeTab", "contextMenus", "commands"],
	"background": {
		"scripts": ["background.js"]
	},
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "Markdown Link Copier"
	},
	"commands": {
		"copy_markdown_link": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y"
			},
			"description": "Markdownリンクをコピー"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
